@model BEUProyecto.Comerciante
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}
<div class="flex-fill d-flex flex-column justify-content-center">
    <div class="container-tight py-6">
        @using (Html.BeginForm("Register", "Comerciantes", FormMethod.Post, new { @class = "card card-md" }))
        {
            <h2>Estimado señor/a comerciante, Bienvenido a nuestra Aplicacion Web MI VECI </h2>
            <h2>Para completar el registro, detalle la base legal sobre su actividad económica </h2>
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.idPersona)
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.baseLegal, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="mb-3">
                        @Html.EditorFor(model => model.baseLegal, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.baseLegal, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-footer">
                        <button type="submit" class="btn btn-primary btn-block" id="persona">Enviar</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
