@model BEUProyecto.Negocio
@{
    ViewBag.Title = "PanelCliente_Inicio";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="page">
    <header class="navbar navbar-expand-md navbar-light">
        <div class="container-xl">
            <a href="#" class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pr-0 pr-md-3">
                <img src='@Url.Content("~/images/logo-black.svg")' alt="MiVeci" class="navbar-brand-image" />
            </a>
            <div class="navbar-nav flex-row order-md-last">
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-toggle="dropdown">
                        @*<span class="avatar" style="background-image: url(./static/avatars/000m.jpg)"></span>*@
                        <div class="d-none d-xl-block pl-2">
                            <div>@ViewBag.nombres</div>
                            <div class="mt-1 small text-muted">Cliente</div>
                        </div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href=@Url.Action("PanelCliente_InfoUsuario","Personas", new { id = ViewBag.id })>
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon dropdown-item-icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" /><path d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 0 0 2.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 0 0 1.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 0 0 -1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 0 0 -2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 0 0 -2.573 -1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 0 0 -1.065 -2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 0 0 1.066 -2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><circle cx="12" cy="12" r="3" /></svg>
                            Perfil
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="~/Home/Login">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon dropdown-item-icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z"></path><path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2"></path><path d="M7 12h14l-3 -3m0 6l3 -3"></path></svg>
                            Salir
                        </a>
                    </div>
                </div>
            </div>
            <div class="collapse navbar-collapse" id="navbar-menu">
                <div class="d-flex flex-column flex-md-row flex-fill align-items-stretch align-items-md-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href=@Url.Action("PanelCliente_Inicio","Negocios", new { id = ViewBag.id })>
                                <span class="nav-link-icon d-md-none d-lg-inline-block">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" /><polyline points="5 12 3 12 12 3 21 12 19 12" /><path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7" /><path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6" /></svg>
                                </span>
                                <span class="nav-link-title">
                                    Inicio
                                </span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href=@Url.Action("PanelCliente_Pedidos","Pedidos", new { id = ViewBag.id })>
                                <span class="nav-link-icon d-md-none d-lg-inline-block">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" /><polyline points="12 3 20 7.5 20 16.5 12 21 4 16.5 4 7.5 12 3" /><line x1="12" y1="12" x2="20" y2="7.5" /><line x1="12" y1="12" x2="12" y2="21" /><line x1="12" y1="12" x2="4" y2="7.5" /><line x1="16" y1="5.25" x2="8" y2="9.75" /></svg>
                                </span>
                                <span class="nav-link-title">
                                    Pedidos
                                </span>
                            </a>
                        </li>
                    </ul>
                    <div class="ml-md-auto pl-md-4 py-2 py-md-0 mr-md-4 order-first order-md-last flex-grow-1">
                        <form action="." method="get">
                            <div class="input-icon">
                                <span class="input-icon-addon">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z"></path><circle cx="10" cy="10" r="7"></circle><line x1="21" y1="21" x2="15" y2="15"></line></svg>
                                </span>
                                <input type="text" class="form-control" placeholder="Buscar">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="content">

        <div class="container-xl">
            <div class="row row-deck">
                @foreach (var item in ViewBag.lst)
                {
                    ViewBag.IdNegocio = item.idNegocio;
                    ViewBag.Imagen = item.imagen;
                    ViewBag.Negocio = item.nombre;
                    ViewBag.Estado = item.estado;
                    ViewBag.Descripcion = item.descripcion;
                    ViewBag.Horario = item.horario;
                    ViewBag.Delibery = item.delivery;
                    ViewBag.Reserva = item.reserva;

                    <div class="col-sm-6 col-xl-4">
                        <div class="card d-flex flex-column">
                            @if (item.imagen != null)
                            {
                                <div align="center"><img src="data:image/png;base64,@System.Convert.ToBase64String(item.imagen)" height="100" class="card-img-top" alt="Card top image"/></div><br />
                            }
                            else
                            {
                                <div align="center"><img src='@Url.Content("~/images/logo-black.svg")' class="card-img-top" alt="Card top image" height="100" ></div><br />
                            }
                            <div class="card-body d-flex flex-column">
                                <h2 class="card-title">@ViewBag.Negocio</h2>
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-green" style="margin-right:10px;"></span>
                                    @if (ViewBag.Estado)
                                    {
                                        <label>Abierto</label>
                                    }
                                    else
                                    {
                                        <label>Cerrado</label>
                                    }
                                </div>
                                <div style="margin-top:8px;">
                                    <p>
                                        @ViewBag.Descripcion
                                    </p>
                                </div>
                                <label>Horario: @ViewBag.Horario</label>
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-azure" style="margin-right:10px;"></span>
                                    @if (ViewBag.Delibery)
                                    {
                                        <label>Delivery: Si</label>
                                    }
                                    else
                                    {
                                        <label>Delivery: No</label>
                                    }
                                </div>
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-azure" style="margin-right:10px;"></span>
                                    @if (ViewBag.Reserva)
                                    {
                                        <label>Reserva: Si</label>
                                    }
                                    else
                                    {
                                        <label>Reserva: No</label>
                                    }
                                </div>
                                <div class="d-flex float-right" style="margin-top:15px;">
                                    <a href=@Url.Action("PanelCliente_Productos","Productoes", new { id = ViewBag.id }) class="btn btn-dark btn-pill btn-block">
                                        Ver
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                  }

            </div>
        </div>


        <footer class="footer footer-transparent">
            <div class="container">
                <div class="row text-center align-items-center flex-row-reverse">
                    <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                        <p>&copy; @DateTime.Now.Year - MI VECI</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>
<!-- Libs JS -->
<script src="~/Scripts/jsCliente/bootstrap.bundle.min.js"></script>
<!-- Tabler Core -->
<script src="~/Scripts/jsCliente/tabler.min.js"></script>
<script>document.body.style.display = "block"</script>